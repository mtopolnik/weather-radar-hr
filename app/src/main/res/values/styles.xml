<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/primary</item>
    </style>
    <style name="RatemeDialogTheme" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:background">@color/primary</item>
    </style>
    <style name="Rateme.Button.Large" parent="@android:style/ThemeOverlay">
        <item name="android:backgroundTint">@color/rateme_button_large</item>
    </style>
    <style name="Rateme.Button.Small" parent="@android:style/ThemeOverlay">
        <item name="android:backgroundTint">@color/rateme_button_small</item>
    </style>
</resources>
