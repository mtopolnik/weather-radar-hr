<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/primary</item>
        <item name="displayOptions">showTitle</item>
    </style>
    <style name="ProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/secondary</item>
    </style>
    <style name="RatemeDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/primary</item>
    </style>
    <style name="Rateme.Button.Large" parent="@android:style/ThemeOverlay">
        <item name="android:backgroundTint">@color/secondary</item>
    </style>
    <style name="Rateme.Button.Small" parent="@android:style/ThemeOverlay">
        <item name="android:backgroundTint">@color/rateme_button_small</item>
    </style>
</resources>
